<!DOCTYPE html>
<html>
<head>
	<title>Blogs</title>
	<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
	<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
	<%= csrf_meta_tags %>
</head>
<body>
	<div class="container">
		<div class="row">
			<div class="col-md-8">
			<% if notice %>
				<div class="alert alert-info">
			<%= notice %>
				</div>
			<% end %>
			<%= yield %>
			</div>
		</div>
	</div>
</body>
</html>
